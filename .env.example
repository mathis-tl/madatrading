# Configuration d'environnement pour Madatrading
# Copiez ce fichier en .env et modifiez les valeurs selon vos besoins

# Configuration API
API_KEY=your_api_key_here
DEFAULT_API=yahoo

# Configuration Base de données  
DATABASE_URL=sqlite:///crypto_data.db

# Configuration des crypto-monnaies à analyser
CRYPTO_SYMBOLS=BTC-USD,ETH-USD,ADA-USD,SOL-USD,XRP-USD

# Configuration des modèles
MODEL_EPOCHS=100
BATCH_SIZE=32
VALIDATION_SPLIT=0.2

# Configuration des chemins
DATA_DIR=data
OUTPUT_DIR=outputs
MODEL_DIR=models
